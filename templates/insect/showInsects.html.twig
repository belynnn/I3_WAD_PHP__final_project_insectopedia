{% extends 'base.html.twig' %}

{% block title %}Liste des insectes{% endblock %}

{% block body %}
    <h1 class="mb-3">Liste des insectes</h1>

    <div class="container text-center">
        <div class="row row-cols-3">
            {% for insect in insects %}
                <div class="col">
                    <a href="{{ path ('app_insect', {id: insect.id}) }}">{{ insect.nameInsect }}</a>

                    {% if insect.image is not null and insect.image != null %}
                        <div><img src="../uploads/images/{{ insect.image }}" width="250px" height="250px" /></div>
                    {% else %}
                        <div><img src="https://answers-afd.microsoft.com/static/images/image-not-found.jpg" width="250px" height="250px" /></div>
                    {% endif %}
                </div>

            {% else %}
                Aucun insecte trouv√©.
            {% endfor %}
        </div>
    </div>

{% endblock %}